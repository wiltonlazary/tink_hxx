sudo: required
dist: trusty

stages:
  - test
  - deploy

language: node_js
node_js: 8

cache:
  directories:
    - $HOME/haxe

os:
  - linux
  # - osx

env:
  - HAXE_VERSION=3.4.7
  - HAXE_VERSION=latest

install:
  - npm install
  - npm install lix -g # apparently PATH gets lost further below
  - lix install haxe $HAXE_VERSION

script:
  - lix run travix interp
  - lix run travix neko
  - lix run travix node
  - lix run travix python
  - if [ "$HAXE_VERSION" != "3.4.7" ]; then lix run travix java -D jvm; fi
  - lix run travix cpp

jobs:
  include:
    # - stage: test # should uncomment this when there is no matrix above (e.g. only one os, one env, etc)
    - stage: deploy
      language: haxe
      haxe: "3.4.7"
      os: linux
      install: skip
      script: skip
      env:
        secure: 
      after_success:
        - haxelib install travix
        - haxelib run travix install
        - haxelib run travix release
